<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan6"
    tools:context=".MainActivity">


    <!--Message-->
    <TextView
        android:id="@+id/txtViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess the number (1-100)"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/black"/>


    <!--Guess left-->
    <TextView
        android:id="@+id/txtViewGuessLeft"
        style="@style/txtViewStyle"
        android:layout_below="@id/txtViewMessage"
        android:text="Guesses left : "
        android:layout_marginTop="30dp" />

    <!--Number of guess left-->
    <TextView
        android:id="@+id/txtViewNumOfGuesses"
        style="@style/txtViewStyle"
        android:layout_toEndOf="@id/txtViewGuessLeft"
        android:layout_below="@id/txtViewMessage"
        android:layout_marginTop="30dp"
        android:hint="0"/>

    <!--Input box-->
    <EditText
        android:id="@+id/edtTxtInput"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/txtViewGuessLeft"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:textAlignment="center"
        android:background="@color/white" />

    <!--Response-->
    <TextView
        android:id="@+id/txtViewResponse"
        style="@style/txtViewStyle"
        android:layout_below="@id/edtTxtInput"
        android:hint="Message"
        android:layout_marginTop="30dp"/>

    <!--Button-->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtViewResponse"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/light_red8"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Submit"/>

</RelativeLayout>



